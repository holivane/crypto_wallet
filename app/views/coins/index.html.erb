<p id="notice"><%= notice %></p>

<h1>Moedas</h1>
<h2><%= cookies[:curso] %></h2>
<h2><%= session[:curso] %></h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= @coins.human_attribute_name(:description) %></th>
      <th><%= @coins.human_attribute_name(:acronym) %></th>
      <th><%= @coins.human_attribute_name(:url_image) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table-group-divider">
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td>
          <% if coin.url_image.present? %>
            <%= image_tag coin.url_image, size:"30" %>
          <% else %>
            <%= image_tag "coin.png", size:"30" %>
          <% end %>
        </td>
        <td><%= link_to t('links.show'), coin %></td>
        <td><%= link_to t('links.edit'), edit_coin_path(coin) %></td>
        <td><%= link_to t('links.delete'), coin, method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

