<p id="notice"><%= notice %></p>

<h1>Tipo de Mineração</h1>

<table>
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Sigla</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to 'Mostrar', mining_type %></td>
        <td><%= link_to 'Editar', edit_mining_type_path(mining_type) %></td>
        <td><%= link_to 'Apagar', mining_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p><%= link_to 'Novo Tipo', new_mining_type_path %></p>
<p><%= link_to 'Tela de início', root_path %></p>
